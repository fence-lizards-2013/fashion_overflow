<br>
<%= form_for @crush, :html => { :multipart => true } do |f| -%>
  <%= f.file_field :image %>
  <%= f.hidden_field :retained_image %><br>
  <%= f.label :image_url, "OR upload an image via URL:" %>
  <%= f.text_field :image_url %><br>
  <%= f.label :description, "Description" %><br>
  <%= f.text_area :description %><br>
  <%= image_tag @crush.image.thumb('100x100').url if @crush.image_uid %>
  <%= f.submit "Submit" %>
<% end -%>

